{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "googleappsscript/googleappsscript": true
  },
  "globals": {
    "Underscore": true,
    "Moment": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "googleappsscript",
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "standard",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "no-var": "error",
    "@typescript-eslint/camelcase": "error"
  }
}
